 "suites": [
            ["webapi", {"cmd": "webapirunner"}],
            ["cert", {"cmd": "cert",
                      "run_args": ["--version=%(version)s",
                                   "--result-file=%(temp_dir)s/results.json"],
                      "extra_files": ["%(temp_dir)s/results.json"]}],
            ["web-platform-tests", {"cmd": "wptrunner",
